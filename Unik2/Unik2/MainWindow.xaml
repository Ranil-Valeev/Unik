<Window x:Class="Unik2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unik2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Авторизация" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <TextBlock Text="Login:" FontSize="30" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="TbLogin" VerticalAlignment="Center" Width="250" Height="40" Margin="80,0" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Password:" Margin="5" FontSize="30" VerticalAlignment="Center"/>
            <TextBox x:Name="Tbpassword" Width="250" Height="40" Margin="30,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <Button x:Name="BtnOk" Click="BtnOk_Click" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="150" Height="40" Background="LightCoral"/>
            <Button x:Name="BtnReg" Click="BtnReg_Click" Content="Регистрация" Height="40" Width="150" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Background="LightCoral"/>
        </StackPanel>
    </Grid>
</Window>
