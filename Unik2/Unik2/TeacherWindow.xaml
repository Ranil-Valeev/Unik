<Window x:Class="Unik2.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unik2"
        mc:Ignorable="d"
        Title="TeacherWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Учитель" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" FontSize="50"/>
        <Button x:Name="Load" Content="Нагрузка" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" Click="Load_Click" Grid.Row="0" Width="100" Height="30" Background="LightCoral"  />
        <Button x:Name="Exit" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Exit_Click" Grid.Row="0" Margin="5" Background="LightCoral" Width="100" Height="30" />
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
