<Page x:Class="Unik2.Admin_Pages.AddTeachers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Unik2.Admin_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddTeachers">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
        <Label Content="Выберите автора: " Height="30" HorizontalAlignment="Left" Margin="5" Width="100"/>
            <ComboBox Margin="5" Height="30" x:Name="TeachersComboBox" Width="200" HorizontalAlignment="Left" DisplayMemberPath="Fio" SelectionChanged="ComboBox_SelectionChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" >
        <Label Content="Fio:" Height="30" Margin="5" HorizontalAlignment="Left" Width="100"/>
        <TextBox x:Name="TbFio" Margin="5" Height="30" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" >
            <Label Content="Category:" HorizontalAlignment="Left" Margin="5" Width="100"/>
            <ComboBox x:Name="CategoryCombobox" Margin="5" Width="150" DisplayMemberPath="CategoryName" SelectedValuePath="Id_category" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" >
            <Label Content="street:" Height="30" Margin="5" HorizontalAlignment="Left" Width="100"/>
            <TextBox x:Name="TbStreet" Margin="5" Height="30" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" >
            <Label Content="House:" Height="30" Margin="5" HorizontalAlignment="Left" Width="100"/>
            <TextBox x:Name="TbHouse" Margin="5" Height="30" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="5" >
            <Label Content="Apartament:" Height="30" Margin="5" HorizontalAlignment="Left" Width="100"/>
            <TextBox x:Name="TbApartament" Margin="5" Height="30" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="6" >
            <Label Content="Login:" Height="30" Margin="5" HorizontalAlignment="Left" Width="100"/>
            <TextBox x:Name="TbLogin" Margin="5" Height="30" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="7" >
            <Label Content="Password:" Height="30" Margin="5" HorizontalAlignment="Left" Width="100"/>
            <TextBox x:Name="TbPassword" Margin="5" Height="30" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click" Background="LightCoral"/>
            <Button x:Name="NewButton" Content="Новая" Width="100" Margin="5" Click="NewButton_Click" Background="LightCoral"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="100" Margin="5" Click="DeleteButton_Click" Background="LightCoral"/>
        </StackPanel>
    </Grid>
</Page>
