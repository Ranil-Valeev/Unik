<Page x:Class="Unik2.Pages.LoadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Unik2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadPage">

    <Grid>
        <ListView x:Name="LaodList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Предмет" DisplayMemberBinding="{Binding Predmet.PredmetName}" Width="200"/>
                    <GridViewColumn Header="Учитель" DisplayMemberBinding="{Binding Teachers.Fio}" Width="200"/>
                    <GridViewColumn Header="Часы" DisplayMemberBinding="{Binding Clocks}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
